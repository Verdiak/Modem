#:kivy 2.3.0

<Home>:
    BoxLayout:
        id: homeScreenContainer
        orientation: 'vertical'
        BoxLayout: # Top bar
            padding: dp(10) 
            canvas.before:
                Color:
                    rgba: 15/255, 15/255, 15/255, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
        
            Button:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'left': 0}
                background_color: 0, 0, 0, 0
                on_release:
                    root.manager.current = 'log'
                Image:
                    source: 'Graphics/navStonks.png'
                    size: self.parent.size
                    center: self.parent.center
        
            Image:
                source: 'Graphics/navLogo.png'

            Button:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'right': 1}
                background_color: 0, 0, 0, 0
                Image:
                    source: 'Graphics/navSearch.png'
                    size: self.parent.size
                    center: self.parent.center

        ScrollView:
            BoxLayout:
                id: entryContainer
                orientation: 'vertical'
                size_hint_y: None # Idk what this does but it wont scroll without it
                height: self.minimum_height # Same with this
                spacing: dp(10)
                padding: dp(10) 

<Search>:
    orientation: 'vertical'

<Log>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout: # Top bar
            canvas.before:
                Color:
                    rgba: 15/255, 15/255, 15/255, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
        
            Button:
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'left': 0}
                background_color: 0, 0, 0, 0
                on_release:
                    root.saveData(moodInput.value, gratitudeInput.text, rantInput.text, actionInput.text)
                    root.manager.current = 'home'
                Image:
                    source: 'Graphics/navBack.png'
                    size: self.parent.size
                    center: self.parent.center
        
            Label:
                id: dateLabel
                font_name: 'Fonts/bold.ttf'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: dp(48)
        
            Button:
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'right': 1}
                background_color: 0, 0, 0, 0
                on_release:
                    root.togglePeriod()
                Image:
                    id: periodGraphic
                    size: self.parent.size
                    center: self.parent.center

        Slider:
            id: moodInput
            min: 0
            max: 5
            step: 0.1
            on_value:
                root.sliderImage()

        TextInput:
            id: gratitudeInput
            font_name: 'Fonts/meduim.ttf'
            background_color: (15/255, 15/255, 15/255, 1)
            foreground_color: 1, 1, 1, 1

        TextInput:
            id: rantInput
            font_name: 'Fonts/meduim.ttf'
            background_color: (15/255, 15/255, 15/255, 1)
            foreground_color: 1, 1, 1, 1

        TextInput:
            id: actionInput
            font_name: 'Fonts/meduim.ttf'
            background_color: (15/255, 15/255, 15/255, 1)
            foreground_color: 1, 1, 1, 1


<Stonks>:
    orientation: 'vertical'

    Button: #Export button
        text: 'Export file'
        on_press: root.exportFile()