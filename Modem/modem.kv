<Log>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout: # Top bar
            canvas.before:
                Color:
                    rgba: 15/255, 15/255, 15/255, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
        
            Button:
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'left': 0}
                background_color: 0, 0, 0, 0
                on_release:
                    root.saveData(moodInput.value, gratitudeInput.text, rantInput.text, actionInput.text)
                    root.manager.current = 'home'
                Image:
                    source: 'Graphics/navBack.png'
                    size: self.parent.size
                    center: self.parent.center
        
            Label:
                id: dateLabel
                text: root.date() if root.date is not None else "No date selected"
                font_name: 'Fonts/bold.ttf'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: dp(48)
        
            Button:
                #id: periodInput probably dont need this
                source: 'Graphics/periodFalse.png' # Initialises it, test without this
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'right': 1}
                background_color: 0, 0, 0, 0
                Image:
                    id: periodGraphic
                    size: self.parent.size
                    center: self.parent.center
                on_release:
                    #root.togglePeriod() #WHY DOES THIS NOT WORK
                    #periodGraphic.source = 'Graphics/periodTrue.png' if root.getPeriod(root.date) == 1 else 'Graphics/periodFalse.png' #see if you can remove this

        Slider:
            id: moodInput
            min: 0
            max: 5
            step: 0.1
            on_value:
                root.sliderImage()

        TextInput:
            id: gratitudeInput
            font_name: 'Fonts/meduim.ttf'
            background_color: (15/255, 15/255, 15/255, 1)
            foreground_color: 1, 1, 1, 1

        TextInput:
            id: rantInput
            font_name: 'Fonts/meduim.ttf'
            background_color: (15/255, 15/255, 15/255, 1)
            foreground_color: 1, 1, 1, 1

        TextInput:
            id: actionInput
            font_name: 'Fonts/meduim.ttf'
            background_color: (15/255, 15/255, 15/255, 1)
            foreground_color: 1, 1, 1, 1


<Stonks>:
    orientation: 'vertical'

    Button: #Export button
        text: 'Export file'
        on_press: root.exportFile()