#:kivy 2.3.0

<Home>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout: # Top bar
            padding: dp(10) 
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
        
            Button:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'left': 0}
                background_color: 0, 0, 0, 0
                on_release:
                    root.manager.current = 'stonks'
                Image:
                    source: 'Graphics/navStonks.png'
                    size: self.parent.size
                    center: self.parent.center
        
            Image:
                source: 'Graphics/navLogo.png'

            Button:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'right': 1}
                background_color: 0, 0, 0, 0
                Image:
                    source: 'Graphics/navSearch.png'
                    size: self.parent.size
                    center: self.parent.center

        ScrollView:
            BoxLayout:
                id: entryContainer
                orientation: 'vertical'
                size_hint_y: None # Idk what this does but it wont scroll without it
                height: self.minimum_height # Same with this
                spacing: dp(10)
                padding: dp(10)

<Search>:
    orientation: 'vertical'

<Log>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout: # Top bar
            padding: dp(10) 
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
        
            Button:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'left': 0}
                background_color: 0, 0, 0, 0
                on_release:
                    root.saveData(moodInput.value, gratitudeInput.text, rantInput.text, actionInput.text)
                    root.manager.current = 'home'
                Image:
                    source: 'Graphics/navBack.png'
                    size: self.parent.size
                    center: self.parent.center
        
            Label:
                id: dateLabel
                font_name: 'Fonts/bold.ttf'
                font_size: 35
                height: dp(50)
                text: 'Stonks'
        
            Button:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'right': 1}
                background_color: 0, 0, 0, 0
                on_release:
                    root.togglePeriod()
                Image:
                    id: periodGraphic
                    size: self.parent.size
                    center: self.parent.center

        ScrollView: # Content
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None # Idk what this does but it wont scroll without it
                height: self.minimum_height # Same with this
                spacing: 10
                padding: 10

                Slider:
                    id: moodInput
                    size_hint_y: None
                    min: 0
                    max: 5
                    step: 0.1
                    on_value:
                        root.sliderImage()

                TextInput:
                    id: gratitudeInput
                    multiline:True
                    size_hint_y: None
                    height: (self.minimum_height)
                    padding: dp(10)
                    #add rounded corners
                    font_name: 'Fonts/medium.ttf'
                    background_color: 0.145, 0.125, 0.11, 1
                    foreground_color: 1, 1, 1, 1

                TextInput:
                    id: rantInput
                    multiline:True
                    size_hint_y: None
                    height: (self.minimum_height)
                    padding: dp(10)
                    font_name: 'Fonts/medium.ttf'
                    background_color: 0.145, 0.125, 0.11, 1
                    foreground_color: 1, 1, 1, 1

                TextInput:
                    id: actionInput
                    multiline:True
                    size_hint_y: None
                    height: (self.minimum_height)
                    padding: dp(10)
                    font_name: 'Fonts/medium.ttf'
                    background_color: 0.145, 0.125, 0.11, 1
                    foreground_color: 1, 1, 1, 1


<Stonks>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout: # Top bar
            padding: dp(10) 
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
        
            Button:
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'left': 0}
                background_color: 0, 0, 0, 0
                on_release:
                    root.manager.current = 'home'
                Image:
                    source: 'Graphics/navBack.png'
                    size: self.parent.size
                    center: self.parent.center
        
            Label:
                font_name: 'Fonts/bold.ttf'
                font_size: 35
                height: dp(50)
                text: 'Stonks'

            Button: # Spacer to put title in middle
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {'right': 1}
                background_color: 0, 0, 0, 0

        ScrollView: # Content
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10

                Button: #Export button
                    canvas.before:
                        Color:
                            rgba: 0.145, 0.125, 0.11, 1
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [dp(10)]
                    font_name: 'Fonts/medium.ttf'
                    background_color: 0, 0, 0, 0
                    text: 'Export file'
                    on_press: root.exportFile()
                    size_hint_y: None
                    height: dp(50)

                Button: #Import Button
                    id: importButton
                    canvas.before:
                        Color:
                            rgba: self.buttonColor
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [dp(10)]
                    font_name: 'Fonts/medium.ttf'
                    background_color: 0, 0, 0, 0
                    buttonColor: 0.145, 0.125, 0.11, 1
                    size_hint_y: None
                    height: dp(50)
                    on_press: root.toggleWarning()
