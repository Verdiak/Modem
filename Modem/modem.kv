#:kivy 2.3.0

<Home>:
    BoxLayout:
        id: homeScreenContainer
        orientation: 'vertical'
        BoxLayout: # Top bar
            canvas.before:
                Color:
                    rgba: 15/255, 15/255, 15/255, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
        
            Button:
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'left': 0}
                background_color: 0, 0, 0, 0
                on_release:
                    root.manager.current = 'log'
                Image:
                    source: 'Graphics/navStonks.png'
                    size: self.parent.size
                    center: self.parent.center
        
            Image:
                source: 'Graphics/navLogo.png'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: dp(48)
        
            Button:
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'right': 1}
                background_color: 0, 0, 0, 0
                Image:
                    source: 'Graphics/navSearch.png'
                    size: self.parent.size
                    center: self.parent.center

